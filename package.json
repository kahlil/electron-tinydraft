{
  "name": "electron-tinydraft",
  "version": "1.0.0",
  "description": "A desktop app for tiny drafts.",
  "scripts": {
    "start": "run-p electron babel:watch",
    "electron": "electron .",
    "babel": "babel src --out-dir app --source-maps",
    "babel:watch": "babel src --out-dir app --source-maps --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kahlil/electron-tinydraft"
  },
  "keywords": [],
  "author": "Kahlil Lechelt",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/electron/electron-quick-start/issues"
  },
  "homepage": "https://github.com/electron/electron-quick-start#readme",
  "devDependencies": {
    "devtron": "^1.3.0",
    "electron": "^1.3.4",
    "eslint": "^3.4.0",
    "eslint-config-xo-react": "^0.9.0",
    "eslint-plugin-react": "^6.2.0",
    "node-sass": "^3.8.0",
    "npm-run-all": "^3.0.0",
    "xo": "^0.16.0"
  },
  "dependencies": {
    "electron-debug": "^1.0.1",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "xstream": "^6.2.0"
  },
  "xo": {
    "esnext": true,
    "space": true,
    "extends": "xo-react",
    "globals": [
      "document"
    ],
    "rules": {
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "react/jsx-space-before-closing": 0,
      "react/require-optimization": 0,
      "react/prop-types": 0,
      "comma-dangle": 0
    }
  },
  "babel": {
    "plugins": [
      "transform-react-jsx"
    ]
  }
}
